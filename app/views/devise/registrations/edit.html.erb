<div class="page_title">
  <h2>Modifier profil</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p><%= f.label :first_name, 'Prénom' %><br />
  <%= f.text_field :first_name, autofocus: true %></p>

  <p><%= f.label :name, 'Nom' %><br />
  <%= f.text_field :name, autofocus: true %></p>

  <div class="field">
    <%= f.label :email, 'Adresse électronique' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, 'Mot de passe' %> <i>(Laisser vide si vous ne souhaitez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmer le mot de passe' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, 'Mot de passe actuel' %> <i>(entrez votre mot de passe actuel pour confirmer vos modifications)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Modifier", :class => "button" %>
  </div>
<% end %>

<%= button_to 'Retour', :back, :method => :get, :class => "button" %>

<center>
  <br>
  <p>
    <h3>Cancel my account</h3>
  </p>
</center>

<p><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "button" %></p>
