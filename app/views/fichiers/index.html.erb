<p id="notice"><%= notice %></p>

<div class="page_title">
  <h1>Fichiers</h1>
</div>

<div class="panel">
  <table class="table">
    <thead>
      <tr>
        <th>Chemin</th>
        <th>EnquÃªte</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @fichiers.each do |fichier| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
          <td><%= fichier.chemin %></td>
          <td><%= fichier.survey.try(:title) %></td>
          <td><%= link_to 'Voir', fichier %></td>
          <% if can? :manage, @survey %>
            <td><%= link_to 'Modifier', edit_fichier_path(fichier) %></td>
            <td><%= link_to 'Supprimer', fichier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<% if can? :manage, Fichier %>
