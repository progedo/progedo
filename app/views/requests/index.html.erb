<p id="notice"><%= notice %></p>

<div class="page_title">
  <h1>Requêtes</h1>
</div>
<div class="panel">
  <table class="table">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Description</th>
        <th>Auteur</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @requests.each do |request| %>
          <% if can? :update && :destroy && :read, request %>
          <tr>
            <td><%= request.title %></td>
            <td><%= request.description %></td>
            <td><%= request.user.nom_complet %></td>
            <td><%= link_to 'Voir', request %></td>
            <td><%= link_to 'Modifier', edit_request_path(request) %></td>
            <td><%= link_to 'Supprimer', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<br>
<% if can? :create, Request %>
  <center>
      <%= link_to 'Nouvelle Requête', new_request_path, :class => "bouton_bas menu" %>
  </center>
<% end %>